<h1>Dogs#new</h1>
<p>Find me in app/views/dogs/new.html.erb</p>

  <%= form_for @dog do |f| %>
    <%= f.label :fname, "First name: " %>
    <%= f.text_field :fname %>
    <br>
    <%= f.label :lname, "Last name: " %>
    <%= f.text_field :lname %>
    <br>
    <%= f.label :gender, "Gender: " %>
    <%= f.select :gender, dog_gender %>
    <br>
    <%= f.label :age, "Age: " %>
    <%= f.text_field :age %>
    <br>
    <%= f.label :breed, "Breed: " %>
    <%= f.text_field :breed %>
    <br>
    <%= f.label :fix, "Fixed: " %>
    <%= f.select :fix, dog_fix %>
    <br>
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
    <br>
    <%= f.submit %>

  <% end %>
